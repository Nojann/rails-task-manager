<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <% checked = task.completed ? "checked" : "" %>
  <li>
    <input type="checkbox" <%= checked %>>
    <%= link_to task.title, task_path(task.id) %>
    : <%= task.details %>
    <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>

  <% end %>
</ul>

